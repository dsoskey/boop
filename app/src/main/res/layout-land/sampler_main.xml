<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <wav.boop.sample.WaveRendererView
        android:id="@+id/waveform_canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ap_black"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_center"
        app:layout_constraintEnd_toEndOf="@id/v9375"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/v125"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/v9375"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_center"
    >
        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:id="@+id/sample_amplitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:vsb_bar_background="?attr/colorPrimary"
            app:vsb_bar_progress_gradient_end="?attr/colorPrimary"
            app:vsb_bar_progress_gradient_start="?attr/colorOnPrimary"
            app:vsb_thumb_container_tint="?attr/colorOnPrimary"
            app:vsb_thumb_placeholder_src="@drawable/outline_menu_24"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v125"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_center"
    >

        <Button
            android:id="@+id/record_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/temperedSienna"
            android:textColor="#FFFFFF"
            android:text="@string/sampler_rec_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/h666" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FF5722"
            android:textColor="#FFFFFF"
            android:text="@string/sampler_save_text"
            app:layout_constraintBottom_toBottomOf="@id/h666"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/h333"
            />
        <Button
            android:id="@+id/load_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:text="@string/sampler_load_text"
            app:layout_constraintBottom_toBottomOf="@id/h333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".333"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".666"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sample_horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".33"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".66"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pad_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toStartOf="@+id/v125"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/pad_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v25"
        app:layout_constraintStart_toStartOf="@id/v125"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/pad_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v375"
        app:layout_constraintStart_toStartOf="@id/v25"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/pad_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toStartOf="@id/vertical_center"
        app:layout_constraintStart_toStartOf="@id/v375"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/pad_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toStartOf="@id/v625"
        app:layout_constraintStart_toStartOf="@id/vertical_center"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/pad_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toStartOf="@id/v75"
        app:layout_constraintStart_toStartOf="@id/v625"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/pad_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toEndOf="@id/v875"
        app:layout_constraintStart_toStartOf="@id/v75"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/pad_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v875"
        tools:ignore="ContentDescription" />

<!--    -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".125"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v375"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".375"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".625"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v875"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".875"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v9375"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9375"
        app:layout_constraintTop_toTopOf="parent"/>


    <SeekBar
        android:id="@+id/startBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:thumb="@drawable/start_thumb"
        android:progressDrawable="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_center"
        app:layout_constraintEnd_toEndOf="@id/v9375"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v125"
        app:layout_constraintTop_toTopOf="@+id/sample_horizontal_center"
     />

    <SeekBar
        android:id="@+id/endBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:thumb="@drawable/end_thumb"
        android:progressDrawable="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sample_horizontal_center"
        app:layout_constraintEnd_toEndOf="@id/v9375"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v125"
        app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>