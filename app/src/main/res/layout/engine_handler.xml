<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="UnusedAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            tools:ignore="UselessParent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/oscillator_control_title"
                android:textColor="?attr/colorSecondary"
                android:background="?attr/colorPrimary"
                android:elevation="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/module_border"
                android:elevation="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp">

            <TextView
                    android:id="@+id/wave1_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/wave1_description"
                    android:textColor="?attr/colorOnPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            
            <Button
                    android:id="@+id/square_button"
                    style="@style/Widget.Boop.ControlModule.Button.Medium"
                    android:text="Square"
                    android:layout_marginEnd="8dp"
                    android:textColor="?attr/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/sin_button"
                    app:layout_constraintTop_toTopOf="@+id/sin_button"
            />

            <Button
                    android:id="@+id/sin_button"
                    style="@style/Widget.Boop.ControlModule.Button.Medium"
                    android:text="Sin"
                    android:textColor="?attr/colorAccent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/wave1_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />

            <Button
                    android:id="@+id/saw_button"
                    style="@style/Widget.Boop.ControlModule.Button.Medium"
                    android:layout_marginStart="8dp"
                    android:text="Saw"
                    android:textColor="?attr/colorAccent"
                    app:layout_constraintStart_toEndOf="@+id/sin_button"
                    app:layout_constraintTop_toTopOf="@+id/sin_button"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>