            android:background="#FFC812"
            app:layout_constraintStart_toEndOf="@+id/grid-10"
            app:layout_constraintTop_toBottomOf="@+id/grid-15"/>

    <Button
            android:id="@+id/grid-12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:width="98dp"
            android:height="98dp"
            android:background="#FFDA28"
            app:layout_constraintEnd_toStartOf="@+id/grid-13"
            app:layout_constraintTop_toTopOf="@+id/grid-top-guideline"/>

    <Button
            android:id="@+id/grid-13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:width="98dp"
            android:height="98dp"
            android:background="#FFD11D"
            app:layout_constraintEnd_toStartOf="@+id/grid-left-guideline"
            app:layout_constraintTop_toTopOf="@+id/grid-top-guideline"/>

    <Button
            android:id="@+id/grid-14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="98dp"
            android:height="98dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFC812"
            app:layout_constraintStart_toEndOf="@+id/grid-13"
            app:layout_constraintTop_toTopOf="@+id/grid-top-guideline"/>

    <Button
            android:id="@+id/grid-15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="98dp"
            android:height="98dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFBF07"
            app:layout_constraintStart_toEndOf="@+id/grid-14"
            app:layout_constraintTop_toTopOf="@+id/grid-top-guideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/grid-left-guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/grid-top-guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="1dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
