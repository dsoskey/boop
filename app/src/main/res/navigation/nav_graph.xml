<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/playSpaceFragment">
    <fragment
        android:id="@+id/playSpaceFragment"
        android:name="wav.boop.PlaySpaceFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_play_space">
        <action
            android:id="@+id/openSynthesizerControls"
            app:destination="@id/synthesizerControlFragment" />
    </fragment>
    <fragment
        android:id="@+id/synthesizerControlFragment"
        android:name="wav.boop.control.ControlFragment"
        android:label="synthesizer" >
        <argument
            android:name="index"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="subfragmentIds"
            app:argType="integer[]" />
        <action
            android:id="@+id/openSynthesizerControls"
            app:destination="@id/synthesizerControlFragment" />
    </fragment>
</navigation>